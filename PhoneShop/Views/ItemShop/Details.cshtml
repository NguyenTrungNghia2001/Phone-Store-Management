@using PhoneShop.Models
@model Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin chi tiết</h2>
</br>
<div class="row">
    <div class="offset-md-1 col-md-4">
        <img style="width:100%" src="~/Images/@Model.ImagePro" alt="" />
    </div>
    <div class="col-md-6 details">
        <h3>Tên sản phẩm: @Model.NamePro</h3>
        <p style="text-align: justify">
            <span style="font-weight bold">Mô tả</span>@Model.DecriptionPro
        </p>
        <p class="price">
            Giá: <span style="color:red; font-size:32px;">@Model.Price.Value.ToString("###,###,##0") VND</span>
        </p>
        @if (Model.ParentID == 10)
        {
            <p class="btn btn-primary" style="color:black">Sản phẩm hết hàng</p>
        }
        else
        {
            <a class="btn btn-primary" href="@Url.Action("ThemSanPhamVaoGio", "GioHang", new { ProductID = Model.ProductID })">
                Đặt mua
            </a>
        }

    </div>
</div>