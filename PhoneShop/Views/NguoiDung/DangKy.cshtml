
@model PhoneShop.Models.Customer
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align: center">ĐĂNG KÝ THÀNH VIÊN</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-10">
        @using (Html.BeginForm("DangKy", "NguoiDung"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="name">Họ và Tên:</label>
                @Html.TextBox("NameCus", null, new
                {
                    @class = "form-control",
                    @id =
                "name",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="dangnhap">Tên đăng nhập:</label>
                @Html.TextBox("Login", null, new
                {
                    @class = "form-control",
                    @id =
                "dangnhap",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="matkhau">Mat khau:</label>
                @Html.Password("PassCus", null, new
                {
                    @class = "form-control",
                    @id =
                "matkhau",
                    required = "required"
                })
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBox("EmailCus", null, new
                {
                    @class = "form-control",
                    @id =
                "email",
                    type = "email",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="diachi">Địa chỉ:</label>
                @Html.TextBox("AddCus", null, new
                {
                    @class = "form-control",
                    @id =
                "diachi"
                })
            </div>
            <div class="form-group">
                <label for="dienthoai">Điện thoại:</label>
                @Html.TextBox("PhoneCus", null, new
                {
                    @class = "form-control",
                    @id =
                "dienthoai",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="ngaysinh">Ngày sinh:</label>
                @Html.TextBox("Birthday", null, new
                {
                    @class = "form-control",
                    @id =
                "ngaysinh",
                    type = "date",
                    placeholder = "mm/dd/yyyy"
                })
            </div>
            
            <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
        }
    </div>
</div>