@model IEnumerable<PhoneShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách sản phẩm</h2>

<button class="" style="max-width:20%; background-color:deepskyblue; border-radius:10px">
    <a href="~/Admin/Products/Create"><p style="color:black; font-size:20px">Tạo sản phẩm mới</p></a>
</button>
<table class="table table-bordered">
    <tr>
        <th>
            Tình trạng
        </th>
        <th>
            Tên Sản phẩm
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Hình minh hoạ
        </th>
        <th>
            Mã cha
        </th>
        <th>
            Giá
        </th>
        <th>
            Loại sản phẩm
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if(item.ParentID == 10)
            {
                <p style="color:red;">sản phẩm ngưng bán</p>
                }
            else
                {
                    <p>...</p>
                }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamePro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecriptionPro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category1.NameCate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
            
        </td>
    </tr>
}

</table>
